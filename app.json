{
  "expo": {
    "name": "Tasker",
    "slug": "tasker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "dev.hersey.tasker",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "ios": {
      "bundleIdentifier": "dev.hersey.tasker",
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Validate access to private tasks on the app"
      }
    }
  }
}
